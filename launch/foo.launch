<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- default params -->
  <arg name="camera"              default="d455"/>

  <arg name="serial_no"           default=""/>
  <arg name="usb_port_id"         default=""/>
  <arg name="device_type"         default=""/>
  <arg name="json_file_path"      default=""/>
  <arg name="output"              default="screen"/>
  <arg name="respawn"             default="false"/>
  <arg name="tf_prefix"           default="$(arg camera)"/>
  <arg name="manager"             default="realsense2_camera_manager"/>
  <arg name="external_manager"    default="false"/>

  <arg name="enable_infra"        default="false"/>
  <arg name="enable_infra1"       default="false"/>
  <arg name="enable_infra2"       default="false"/>
  <arg name="enable_depth"        default="true"/>
  <arg name="enable_pointcloud"   default="true"/>
  <arg name="enable_color"        default="true"/>
  <arg name="enable_gyro"         default="false"/>
  <arg name="enable_accel"        default="false"/>

  <arg name="infra_width"         default="480"/>
  <arg name="infra_height"        default="270"/>
  <arg name="depth_width"         default="480"/>
  <arg name="depth_height"        default="270"/>
  <arg name="color_width"         default="480"/>
  <arg name="color_height"        default="270"/>

  <arg name="infra_fps"           default="30"/>
  <arg name="depth_fps"           default="90"/>
  <arg name="color_fps"           default="15"/>

  <arg name="clip_distance"       default="10000"/>
  <arg name="filters"			  default=""/>

  <!-- pixel confidence for depth -->
  <arg name="enable_confidence"   default="false"/>
  <arg name="confidence_fps"      default="-1"/>
  <arg name="confidence_width"    default="-1"/>
  <arg name="confidence_height"   default="-1"/>

  <arg name="pointcloud_texture_stream" default="RS2_STREAM_COLOR"/>
  <arg name="pointcloud_texture_index"  default="0"/>
  <arg name="allow_no_texture_points"   default="false"/>
  <arg name="ordered_pc"                default="false"/>

  <arg name="infra_rgb"                 default="false"/>
  <arg name="enable_sync"               default="false"/>  <!-- when enable_sync==false, the timestamps corresponds to the capturing time of each image -->
  <arg name="align_depth"               default="false"/>

  <arg name="publish_tf"                default="false"/>
  <arg name="tf_publish_rate"           default="0"/>

  <arg name="initial_reset"             default="false"/>
  <arg name="reconnect_timeout"         default="6.0"/>
  <arg name="wait_for_device_timeout"   default="-1.0"/>

  <arg name="stereo_module/exposure/1"  default="7500"/>
  <arg name="stereo_module/gain/1"      default="16"/>
  <arg name="stereo_module/exposure/2"  default="1"/>
  <arg name="stereo_module/gain/2"      default="16"/>


  <group ns="$(arg camera)">
    <include file="$(find realsense2_camera)/launch/includes/nodelet.launch.xml">
      <arg name="serial_no"                value="$(arg serial_no)"/>
      <arg name="usb_port_id"              value="$(arg usb_port_id)"/>
      <arg name="device_type"              value="$(arg device_type)"/>
      <arg name="json_file_path"           value="$(arg json_file_path)"/>
      <arg name="output"                   value="$(arg output)"/>
      <arg name="respawn"                  value="$(arg respawn)"/>
      <arg name="manager"                  value="$(arg manager)"/>
	  <arg name="external_manager"         value="$(arg external_manager)"/>
      <arg name="tf_prefix"                value="$(arg tf_prefix)"/>
      <arg name="enable_infra"             value="$(arg enable_infra)"/>
      <arg name="enable_infra1"            value="$(arg enable_infra1)"/>
      <arg name="enable_infra2"            value="$(arg enable_infra2)"/>
      <arg name="enable_depth"             value="$(arg enable_depth)"/>
      <arg name="enable_pointcloud"        value="$(arg enable_pointcloud)"/>
      <arg name="enable_color"             value="$(arg enable_color)"/>
      <arg name="enable_gyro"              value="$(arg enable_gyro)"/>
      <arg name="enable_accel"             value="$(arg enable_accel)"/>
      <arg name="infra_width"              value="$(arg infra_width)"/>
      <arg name="infra_height"             value="$(arg infra_height)"/>
      <arg name="depth_width"              value="$(arg depth_width)"/>
      <arg name="depth_height"             value="$(arg depth_height)"/>
      <arg name="color_width"              value="$(arg color_width)"/>
      <arg name="color_height"             value="$(arg color_height)"/>
      <arg name="infra_fps"                value="$(arg infra_fps)"/>
      <arg name="depth_fps"                value="$(arg depth_fps)"/>
      <arg name="color_fps"                value="$(arg color_fps)"/>
      <arg name="clip_distance"            value="$(arg clip_distance)"/>
      <arg name="filters"				   value="$(arg filters)"/>
      <arg name="enable_confidence"        value="$(arg enable_confidence)"/>
      <arg name="confidence_fps"           value="$(arg confidence_fps)"/>
      <arg name="confidence_width"         value="$(arg confidence_width)"/>
      <arg name="confidence_height"        value="$(arg confidence_height)"/>
      <arg name="pointcloud_texture_stream" value="$(arg pointcloud_texture_stream)"/>
      <arg name="pointcloud_texture_index"  value="$(arg pointcloud_texture_index)"/>
      <arg name="allow_no_texture_points"  value="$(arg allow_no_texture_points)"/>
      <arg name="ordered_pc"               value="$(arg ordered_pc)"/>
      <arg name="enable_sync"              value="$(arg enable_sync)"/>
      <arg name="align_depth"              value="$(arg align_depth)"/>
      <arg name="publish_tf"               value="$(arg publish_tf)"/>
      <arg name="tf_publish_rate"          value="$(arg tf_publish_rate)"/>
      <arg name="initial_reset"            value="$(arg initial_reset)"/>
      <arg name="reconnect_timeout"        value="$(arg reconnect_timeout)"/>
      <arg name="wait_for_device_timeout"  value="$(arg wait_for_device_timeout)"/>
      <arg name="infra_rgb"                value="$(arg infra_rgb)"/>
      <arg name="stereo_module/exposure/1" value="$(arg stereo_module/exposure/1)"/>
      <arg name="stereo_module/gain/1"     value="$(arg stereo_module/gain/1)"/>
      <arg name="stereo_module/exposure/2" value="$(arg stereo_module/exposure/2)"/>
      <arg name="stereo_module/gain/2"     value="$(arg stereo_module/gain/2)"/>
    </include>
  </group>

  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_d455_depth_optical_frame" args="0 0 0 -1.5708 0 -1.5708 camera0 d455_depth_optical_frame"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_bite" args="0 0 0 0 0 0 os_sensor camera0"/>
</launch>
